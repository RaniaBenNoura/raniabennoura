{% block title %}home {% endblock %}
{% extends 'base-front.html.twig' %}
{% block body %}
<div class="sec-banner bg0 p-t-80 p-b-50">
<div class="container">
<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
						<h1>Présentation</h1>
