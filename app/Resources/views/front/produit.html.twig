{% block title %}liste produits {% endblock %}
{% extends 'base-front.html.twig' %}
{% block body %}
	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
						<h2>{{ categorie.libelle }}</h2>
						<div class="panel-group category-products" id="accordian">
							{{ categorie.texte }}
						</div>
					</div> 
				</div>
				<div class="col-sm-9 padding-right">
					<div class="features_items">
						<h2 class="title text-center">Les produits de la catégorie {{ categorie.libelle }}</h2>
						
					
                          {% for produit in produits %}
                            <div class="sec-banner bg0 p-t-80 p-b-50">
                               <div class="container">
                                   <div class="row">

							         	<div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">

					                       <div class="block2">
					        	                <div class="block2-pic hov-img0">
							                        <img src="{{produit.image}}" alt="IMG-PRODUCT">
							
							                           <span class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
								                          {{produit.libelle}}
							                            	 <br>
								                           {{produit.prix}}
							                            </span>
								  
						                           </div>
								                        <div class="block2-txt flex-w flex-t p-t-14">
							                                <div class="block2-txt-child1 flex-col-l ">

                                                                <div class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
								                                    <a href="{{path('details',{'id_prd' : produit.id})}}"  class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
								                                        Détails 
								 
							                                        </a>
								                                </div>
							                                </div>

							                                <div class="block2-txt-child2 flex-r p-t-3">
								                               <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
									                              <img class="icon-heart1 dis-block trans-04" src="images/icons/icon-heart-01.png" alt="ICON">
									                               <img class="icon-heart2 dis-block trans-04 ab-t-l" src="images/icons/icon-heart-02.png" alt="ICON">
								                                 </a>
							                                </div>
						                                </div>
								                    </div>
								   
								                     <div class="product-overlay">
									                         <div class="overlay-content">
										                        <p>{{produit.texte}}</p>
											
										                    </div>

									                    </div>	
							                        </div>
							
						                        </div>
						                    </div>
					
					                    </div>
                                     {% endfor %}

					            </div>
					
				            </div>
			            </div>
		            </div>

	 </section>

{% endblock %}